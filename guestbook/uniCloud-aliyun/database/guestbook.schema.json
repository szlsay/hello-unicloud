// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": "doc.state == true",
		"create": "auth.uid != null",
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"text": {
			"bsonType": "string"
		},
		"state": {
			"bsonType": "bool",
			"forceDefaultValue": false
		},
		"user_id": {
			"bsonType": "string",
			"forceDefaultValue": {
				"$env": "uid"
			}
		}
	}
}
